{
  "name": "uzeful",
  "version": "0.0.2",
  "description": "Hooks for the backend",
  "sideEffects": false,
  "scripts": {
    "prepublishOnly": "npm run check:fix && npm run test && npm run build",
    "build": "tsc -p tsconfig.json",
    "test": "bun test --pass-with-no-tests",
    "check:fix": "tsc --noEmit --project tsconfig.json && npx @biomejs/biome check --write .",
    "check": "tsc --noEmit --project tsconfig.json && npx @biomejs/biome check ."
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Censkh/uzeful.git"
  },
  "homepage": "https://github.com/Censkh/uzeful",
  "exports": {
    ".": {
      "workerd": "./src/index.ts",
      "react-server": "./src/index.ts",
      "browser": "./src/index.browser.ts",
      "default": "./src/index.ts"
    },
    "./cloudflare": {
      "workerd": "./src/cloudflare/index.ts",
      "default": "./src/cloudflare/index.ts"
    },
    "./logger": {
      "workerd": "./src/logger/index.ts",
      "react-server": "./src/logger/index.ts",
      "browser": "./src/logger/index.browser.ts",
      "default": "./src/logger/index.ts"
    },
    "./router": {
      "workerd": "./src/router/index.ts",
      "default": "./src/router/index.ts"
    },
    "./validation": {
      "workerd": "./src/validation/index.ts",
      "default": "./src/validation/index.ts"
    },
    "./cache": {
      "workerd": "./src/cache/index.ts",
      "default": "./src/cache/index.ts"
    },
    "./cache/kv": {
      "workerd": "./src/cache/KVKeyStore.ts",
      "default": "./src/cache/KVKeyStore.ts"
    },
    "./cache/upstash": {
      "workerd": "./src/cache/UpstashKeyStore.ts",
      "default": "./src/cache/UpstashKeyStore.ts"
    },
    "./cache/in-memory": {
      "workerd": "./src/cache/InMemoryKeyStore.ts",
      "default": "./src/cache/InMemoryKeyStore.ts"
    }
  },
  "keywords": [
    "typescript",
    "backend",
    "hooks",
    "cloudflare",
    "logging",
    "errors",
    "state",
    "routing"
  ],
  "files": [
    "LICENSE",
    "README.md",
    "src/"
  ],
  "author": "James Waterhouse <09jwater@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "4.1.2",
    "cookie": "^1.1.1",
    "itty-router": "^5.0.23",
    "qs": "^6.15.0",
    "sendable-error": "^0.10.0"
  },
  "peerDependencies": {
    "@upstash/redis": "^1.36.3"
  },
  "devDependencies": {
    "@upstash/redis": "^1.36.3",
    "@biomejs/biome": "^2.4.4",
    "@types/node": "^25.3.2",
    "@types/qs": "^6.14.0",
    "commander": "^14.0.3",
    "ts-morph": "^27.0.2",
    "typescript": "^5.9.3",
    "zod": "4.3.6"
  }
}
